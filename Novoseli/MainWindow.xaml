<Window x:Class="LoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="700" Width="700" Background="#FF2C3E50">
    <Grid>
        <Border CornerRadius="10" Background="White" Margin="20" Padding="20">
            <StackPanel>
                <TextBlock Text="Добро пожаловать!" FontSize="24" FontWeight="Bold" Foreground="#FF34495E" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Имя:" FontSize="20" Foreground="#FF34495E"/>
                <TextBox Name="NameTextBox" Width="300" Height="30" Margin="0,0,0,20" Padding="5" FontSize="16" BorderBrush="#FF34495E" BorderThickness="1" />
                
                <Button Content="Войти" Width="100" Height="30" Background="#FF34495E" Foreground="White" FontSize="16" HorizontalAlignment="Center" Click="LoginButton_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>